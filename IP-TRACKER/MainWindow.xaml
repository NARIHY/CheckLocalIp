<Window x:Class="IP_TRACKER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IP-TRACKER" Height="360" Width="460" WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Localisation et Diagnostic IP"
                   FontSize="18" FontWeight="Bold"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- IP Input -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBox x:Name="Octet1" Width="50" Height="30" MaxLength="3"
                     TextAlignment="Center" FontSize="14"
                     PreviewTextInput="Octet_PreviewTextInput"
                     TextChanged="Octet_TextChanged"
                     PreviewKeyDown="Octet_PreviewKeyDown"/>
            <TextBlock Text="." VerticalAlignment="Center" FontSize="16" Margin="5,0"/>
            <TextBox x:Name="Octet2" Width="50" Height="30" MaxLength="3"
                     TextAlignment="Center" FontSize="14"
                     PreviewTextInput="Octet_PreviewTextInput"
                     TextChanged="Octet_TextChanged"
                     PreviewKeyDown="Octet_PreviewKeyDown"/>
            <TextBlock Text="." VerticalAlignment="Center" FontSize="16" Margin="5,0"/>
            <TextBox x:Name="Octet3" Width="50" Height="30" MaxLength="3"
                     TextAlignment="Center" FontSize="14"
                     PreviewTextInput="Octet_PreviewTextInput"
                     TextChanged="Octet_TextChanged"
                     PreviewKeyDown="Octet_PreviewKeyDown"/>
            <TextBlock Text="." VerticalAlignment="Center" FontSize="16" Margin="5,0"/>
            <TextBox x:Name="Octet4" Width="50" Height="30" MaxLength="3"
                     TextAlignment="Center" FontSize="14"
                     PreviewTextInput="Octet_PreviewTextInput"
                     TextChanged="Octet_TextChanged"
                     PreviewKeyDown="Octet_PreviewKeyDown"/>
        </StackPanel>

        <!-- Bouton & Progress -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="Search" Content="Rechercher"
                    Width="120" Height="35"
                    Background="#3498DB" Foreground="White"
                    FontWeight="Bold" BorderThickness="0"
                    Cursor="Hand"
                    Click="Search_IP_Click"/>
            <ProgressBar x:Name="Progress" Width="140" Height="20" Margin="15,0,0,0"
                         IsIndeterminate="True" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Statut -->
        <TextBlock Grid.Row="2" x:Name="StatusText" Text=""
                   HorizontalAlignment="Center" Margin="0,50,0,0"
                   FontWeight="Bold" Foreground="#2C3E50"/>

        <!-- Résultat -->
        <TextBox Grid.Row="3" x:Name="ResultBox" Margin="0,10,0,0"
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True" FontFamily="Consolas" FontSize="13"
                 Background="#ECF0F1" BorderBrush="#BDC3C7"
                 Padding="10" />
    </Grid>
</Window>
